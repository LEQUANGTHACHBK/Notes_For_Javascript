  <script>
    $(document).ready(function(){
      let x = document.getElementsByClassName('titleVavlue');
      for(let i = 0; i < x.length; i++)
      {
        if(x[i].innerHTML.length > 20)
        {
          x[i].innerHTML = x[i].innerHTML.slice(0,17) + '...'
        }
      }
    })
